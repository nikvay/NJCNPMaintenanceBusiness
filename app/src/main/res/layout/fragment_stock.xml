<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.StockFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search Product Stock"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_edt_text"
            android:drawableEnd="@drawable/ic_vector_search"
            android:id="@+id/edt_search_stock"/>


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/edt_search_stock"
            android:id="@+id/recyclerViewStock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_no_data_found"
            android:textColor="@color/app_color"
            android:visibility="gone"
            android:text="N0 Data Found" />

    </RelativeLayout>

</FrameLayout>